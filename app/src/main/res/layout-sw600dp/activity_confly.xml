<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".ConflyActivity">
    <LinearLayout
        android:id="@+id/activity_shelf_panel_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/activity_shelf_panel_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="6dp"
            android:background="#0D0E0F">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/activity_btn_mag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/mag_inactive"
                    android:layout_marginLeft="6dp" />
                <ImageButton
                    android:id="@+id/activity_btn_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/book_inactive"
                    android:layout_marginLeft="6dp" />
                <ImageButton
                    android:id="@+id/activity_btn_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/doc_inactive"
                    android:layout_marginLeft="6dp" />
                <ImageButton
                    android:id="@+id/activity_btn_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/choose_type"
                    android:layout_marginLeft="6dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:paddingTop="3dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/language_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/language"
                        android:layout_toLeftOf="@+id/activity_btn_menu" />

                    <ImageButton
                        android:id="@+id/activity_btn_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:background="@drawable/menu_inactive"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="ALL"
                        android:id="@+id/languageText"
                        android:layout_centerVertical="true"
                        android:layout_alignRight="@+id/language_menu"
                        android:layout_alignEnd="@+id/language_menu"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="18dp"
                        android:textColor="#fff"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/activity_btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/search_icon"
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_shelf_panel_header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/activity_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="My Shelf"
                    android:layout_marginBottom="5dp"
                    android:textSize="28dp"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="3dp"
                android:id="@+id/delete_layout"
                android:layout_alignParentTop="true">
                <!--<ImageButton-->
                <!--android:id="@+id/activity_btn_date"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="6dp"-->
                <!--android:background="@drawable/date_inactive"  />-->
                <!--<ImageButton-->
                <!--android:id="@+id/activity_btn_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingTop="3dp"-->
                <!--android:layout_marginRight="6dp"-->
                <!--android:background="@drawable/title_inactive"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"/>-->
                <ImageButton
                    android:id="@+id/editBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bin_inactive"
                    android:background="#00ffffff"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/activity_shelf_panel_shelf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_weight="1">
            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/activity_shelf_pager_shelf"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:paddingTop="10dp"/>-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contentPanel">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/activity_shelf_panel_page_control_shelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/activity_shelf_panel_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="14dp"
            android:paddingBottom="8dp"
            android:background="#0D0E0F"  >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center|center_vertical|center_horizontal">
                <ImageButton
                    android:id="@+id/news_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0fff"
                    android:src="@drawable/news_inactive_mobile"
                    android:layout_gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:layout_weight="1" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="0dp"

                    />
                <ImageButton
                    android:id="@+id/download_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0fff"
                    android:src="@drawable/content_active"
                    android:layout_gravity="center|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="0dp"
                    />
                <ImageButton
                    android:id="@+id/myshelf_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0fff"
                    android:src="@drawable/shelft_inactive_mobile"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>